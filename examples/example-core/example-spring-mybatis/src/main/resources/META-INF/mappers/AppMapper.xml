<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.apache.shardingsphere.example.core.mybatis.repository.AppMapper">
    <resultMap id="baseResultMap" type="org.apache.shardingsphere.example.core.api.entity.App">
        <result column="app_code" property="appCode" jdbcType="VARCHAR"/>
        <result column="app_name" property="appName" jdbcType="VARCHAR"/>
    </resultMap>

    <update id="createTableIfNotExists">
        CREATE TABLE IF NOT EXISTS t_app
        (
            app_code varchar(16) null,
            app_name varchar(16) null
        );
    </update>

    <update id="truncateTable">
        TRUNCATE TABLE t_app;
    </update>

    <update id="dropTable">
        DROP TABLE IF EXISTS t_app;
    </update>

    <insert id="insert">
        INSERT INTO t_app (app_code, app_name) values (#{appCode,jdbcType=BIGINT}, #{appName,jdbcType=VARCHAR});
    </insert>

    <insert id="insertBySelect">
        INSERT INTO t_app (app_code, app_name) select app_code,app_name from t_app where app_code=#{appCode}
    </insert>

    <delete id="delete">
        DELETE FROM t_app WHERE app_code = #{appCode,jdbcType=VARCHAR};
    </delete>

    <select id="selectAll" resultMap="baseResultMap">
        SELECT * FROM t_app
    </select>

    <select id="select" resultType="org.apache.shardingsphere.example.core.api.entity.App">
        SELECT * FROM t_app WHERE app_code = #{appCode,jdbcType=VARCHAR};
    </select>
</mapper>
